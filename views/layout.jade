doctype html
html(lang="en")

	head
		meta(charset="utf-8")
		title BeeOne
		meta(name="description", content="BeeOne GmbH / The digital innovation unit of Erste Hub")
		meta(name="viewport", content="width=device-width,initial-scale=1.0")
		block stylesheets
			link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Open+Sans:300")
			if verbose
				link(rel="stylesheet", href="/normalize.css")
				link(rel="stylesheet", href="/style.css")
			else
				style
					include ../build/main.min.css
		block icons
			link(rel="icon", type="image/png", sizes="256x256", href="avatar.png")
			if verbose
				link(rel="icon", type="image/png", sizes="16x16", href="favicon.png")
			else
				link(rel="icon", type="image/png", sizes="16x16", href="data:image/png;base64,")
			link(rel="apple-touch-icon", href="avatar.png")
		link(rel="alternate" title="vCard", href="http://h2vx.com/vcf/https%3A//www.beeone.at/", type="text/directory")

	body

		section.vcard
			block errors
			main(role="main")
				h1.regular
					a.url(href="//www.beeone.at/")
						if verbose
							img.logo(src="logo.svg", alt="BeeOne")
						else
							include ../static/logo.svg
				h2.regular.tagline.note
					| The digital innovation unit of Erste&nbsp;Hub
				div.fn.org
					| BeeOne
					abbr(lang="de", title="Gesellschaft mit beschr&auml;nkter Haftung") GmbH
				div.adr
					div.street-address
						span(lang="de") Neutorgasse
						| &nbsp;4-8
				div
					span.postal-code 1010
					| &nbsp;
					span.locality Vienna
				div.country-name.visuallyhidden Austria
				div
					span.email
						| office
						abbr(title="at") &#64;
						| beeone
						abbr(title="dot") &#46;
						| at
			nav.screen(role="navigation")
				hr.print
				a.about-us.rotate(href="http://www.erstegroup.com/en/About-us/Hub") About us
			footer(role="contentinfo")
				hr.print
				small
					| Member of Erste&nbsp;Group
					br
					a.parent(href="http://www.erstegroup.com/")
						if verbose
							img(src="logo_erstegroup.svg" alt="")
						else
							include ../static/logo_erstegroup.svg
		block javascripts
			if verbose
				script(src="mailto.js")
			else
				script
					include ../build/main.min.js

