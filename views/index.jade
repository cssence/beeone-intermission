doctype html
html(lang="en")

	head
		meta(charset="utf-8")
		title BeeOne ☆ Research &amp; Innovation for Erste Group
		meta(name="description", content="BeeOne GmbH is the digital innovation unit of Erste Hub.")
		meta(name="viewport", content="width=device-width,initial-scale=1.0")
		block stylesheets
			link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Open+Sans:300")
			if verbose
				link(rel="stylesheet", href="/style.css")
			else
				style
					include ../build/main.min.css
		block icons
			link(rel="icon", type="image/png", sizes="16x16", href="data:image/png;base64,")
			link(rel="icon", type="image/png", sizes="256x256", href="avatar.png")

	body
		main(role="main")
			block errors
			input.flip.screen(id="flip", type="checkbox")
			label.flip.screen(for="flip")
				a(href="#map")= " Show map"
			.panel
				section.c.vcard
					h1.fn.n.org(href="//www.beeone.at/")
						a.url(href="//www.beeone.at/")
							img.logo(src="logo.png", alt="Corporate Logo of BeeOne GmbH")
						= " BeeOne "
						abbr(lang="de", title="Gesellschaft mit beschränkter Haftung") GmbH
					p.tagline
						em.note The digital innovation unit of Erste&nbsp;Hub
					p.adr
						a(href="https://www.google.com/maps/place/Neutorgasse+4,+1010+Wien", title="Show in Google Maps")
							span.street-address(lang="de") Neutorgasse&nbsp;4-8
							br
							span.postal-code 1010
							| &nbsp;
							span.locality Vienna
							br.print
							span.country-name.print Austria
					p
						span.email
							| office
							abbr(title="at") &#64;
							| beeone
							abbr(title="dot") &#46;
							| at
					p
						small ATU 67474556
				nav.c.screen(role="navigation")
					a.about-us(href="http://www.erstegroup.com/en/About-us/Hub") About us
				footer(role="contentinfo")
					p.c
						small
							| Member of 
							a.parent(href="http://www.erstegroup.com/") Erste&nbsp;Group
			.panel
				figure#map
					a(href="https://www.google.com/maps/place/Neutorgasse+4,+1010+Wien", title="Show in Google Maps")
						img.map(src="/map.png", alt="Map highlighting the company’s location in the heart of Vienna; courtesy of Google.")
					figcaption.c
						p The company is located in the first district of Vienna, close to metro station “Schottenring”.
		block javascripts
			if verbose
				script(src="mailto.js")
			else
				script
					include ../build/main.min.js
